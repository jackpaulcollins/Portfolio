<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_work_path %>

<% @work_items.each do |work_item| %>
  <h2> <%= link_to work_item.title, work_path(work_item) %> </h2>
  <p> <%= work_item.subtitle %> </p>
  <p> <%= work_item.body %> </p>
  <%= image_tag work_item.thumb_image unless work_item.thumb_image.nil?  %>
  <%= link_to "Edit", edit_work_path(work_item.id) %>
  <%= link_to 'Destroy', work_path(work_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>